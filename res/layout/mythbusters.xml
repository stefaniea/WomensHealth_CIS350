<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BackgroundOrange"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/hurts_btn"
        style="@style/Button1"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:onClick="onHurtClick"
        android:text="Breastfeeding hurts" />

    <Button
        android:id="@+id/milk_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onMilkClick"
        android:text="I won&apos;t make enough milk" />

    <Button
        android:id="@+id/saggy_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onSagClick"
        android:text="My breast will be saggy" />

    <Button
        android:id="@+id/spoiled_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onSpoiledClick"
        android:text="My baby will be spoiled." />

    <Button
        android:id="@+id/work_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onWorkClick"
        android:text="I have to go back to school or work" />

    <Button
        android:id="@+id/sleep_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onSleepClick"
        android:text="I&apos;ll never get any sleep" />

    <Button
        android:id="@+id/attached_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onAttachedClick"
        android:text="My baby&apos;s father won&apos;t be attached to the baby" />

    <Button
        android:id="@+id/back_btn_mythbusters"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onBackClick"
        android:text="Back" />

    <ScrollView
        android:id="@+id/bubble_scrollview_mythbusters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/bubble_mythbusters"
                style="@style/BubbleBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/bubble_mythbusters"
                android:scaleType="fitStart"
                android:src="@drawable/avatar1" />

            <Button
                android:id="@+id/questionButton"
                style="@style/ButtonRed"
                android:layout_width="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:onClick="onChangeMind"
                android:text="Change your mind?" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>