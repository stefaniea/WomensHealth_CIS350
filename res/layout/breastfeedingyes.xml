<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/benefits_btn"
        style="@style/Button1"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:onClick="onBenefitsClick"
        android:text="Benefits of Breastfeeding" />

    <Button
        android:id="@+id/steps_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:text="Steps to Successful Breastfeeding"
        android:onClick="onSuccessfulStepsClick">
     
    </Button>
        
    <Button
        android:id="@+id/goals_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onGoalsClick"
        android:text="Goal Setting" />

</LinearLayout>
