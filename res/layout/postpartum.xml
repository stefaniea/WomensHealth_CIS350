<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    style="@style/BackgroundOrange" >

    <Button
        android:id="@+id/wte_btn"
        style="@style/Button1"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:onClick="onWhatToExpectClick"
        android:text="What to Expect" />

    <Button
        android:id="@+id/pal_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onPositioningLatchClick"
        android:text="Position and Latch" />

    <Button
        android:id="@+id/tap_btn"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="onTroubleShootingClick"
        android:text="Troubleshooting and Problems" />

     <Button
        android:id="@+id/referencesButton"
        style="@style/Button1"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:onClick="referencesButtonClick"
        android:text="References" />
    
</LinearLayout>