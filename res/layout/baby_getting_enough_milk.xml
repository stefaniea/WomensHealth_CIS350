<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BackgroundBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/checkBox1"
        style="@style/BackgroundBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baby looks healthy and alert"
        android:drawablePadding="-50dp"
        android:paddingLeft="40dp"
         />

    <CheckBox
        style="@style/BackgroundBlue"
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby is nursing 8-12 feedings every 24 hours"
        android:drawablePadding="-50dp"
        android:paddingLeft="40dp" />

    <CheckBox
        style="@style/BackgroundBlue"
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="While breastfeeding you can hear the baby making swallowing noises"
        android:drawablePadding="-50dp"
        android:paddingLeft="40dp" />

    <CheckBox
        style="@style/BackgroundBlue"
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="-50dp"
        android:paddingLeft="40dp"
        android:text="Baby is gaining 4 â€“ 7 ounces per week (4 days after delivery)" />

    <ExpandableListView
        style="@style/BackgroundBlue"
        android:id="@+id/baby_enough_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </ExpandableListView>

</LinearLayout>