<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/nipplehurts_latch"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="Assess if your baby is latched on correctly"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:onClick="onAssessLatchedClick"
         />

    <Button
        android:id="@+id/nipplehurts_pos"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:text="Try changing to a different position" 
        android:onClick="onChangePositionClick"/>

    <ExpandableListView
        android:id="@+id/nipplehurts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ExpandableListView>

</LinearLayout>
